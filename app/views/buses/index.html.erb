<% @buses.each { |bus|%>
<div class="card" style="width: 100%">
  <img src="bus-image.jpg" class="card-img-top" alt="Bus Image">
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <h5 class="card-title"><%= bus.name.upcase %></h5>
      </div>
      <div class="col-md-6 text-md-end">
        <%= link_to "View Seats",new_bus_reservation_path(bus),class:"btn btn-primary"  %>
      </div>
    </div>
    <div class="my-3"></div>
    <!-- Margin between rows -->
    <p class="card-text"><%= bus.source_route.upcase %> to <%= bus.destination_route.upcase %></p>
  </div>
</div>
<% } %>
