<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <!-- Container wrapper -->
  <div class="container">
    <!-- Navbar brand -->
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo", alt: "MDB Logo", id: "MDB-logo", draggable: "false" ,height:50%>
    <% end %>
    <!-- Toggle button -->
    <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
      data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
      aria-label="Toggle navigation">
      <i class="fas fa-bars"></i>
    </button>
    <!-- Collapsible wrapper -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <!-- Left links -->
      <ul class="navbar-nav me-3">
        <li class="nav-item">
          <%= link_to "Buses",buses_path,class:"nav-link active d-flex align-items-center" %>
        </li>
      </ul>
      <%= render "buses/search" %>
      <ul class="navbar-nav ms-3">
        <% if user_signed_in? %>
          <% if policy(:user).busowner? %>
            <li class="nav-item" style="width: 100px;">
              <%= link_to "Add Bus", new_bus_path ,class:"nav-link d-flex align-items-center"%>
            </li>
          <% end %>
          <li class="nav-item" style="width: 100px;">
            <%= link_to "Profile", user_profile_type ,class:"nav-link d-flex align-items-center"%>
          </li>
          <li class="nav-item" style="width: 100px;">
            <%= link_to "Log out", destroy_user_session_path ,class:"nav-link d-flex align-items-center",data:{turbo_method: :delete}%>
          </li>
        <% else %>
          <li class="nav-item" style="width: 100px;">
            <%= link_to "Sign Up", new_user_registration_path ,class:"nav-link d-flex align-items-center me-3"%>
          </li>
          <li class="nav-item" style="width: 100px;">
            <%= link_to "Sign In", new_user_session_path ,class:"nav-link d-flex align-items-center"%>
          </li>
        <% end %>
      </ul>
    </div>
    <!-- Collapsible wrapper -->
  </div>
  <!-- Container wrapper -->
</nav>
<!-- Navbar -->
